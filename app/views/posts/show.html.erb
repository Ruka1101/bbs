<ul>
    <li>
        <h2><%= @post.title %></h2>
        <p><%= @post.content %></p><br>
        <%= image_tag @post.board_image.url, size: '300x200' %>
        <span>
            <small><%= @post.created_at.strftime('%Y年%m月%d日 %H時%M分') %></small><br>
            <small><%= @post.user.name %></small>
        </span>
        <div>
            <%= link_to "詳細", show_post_path(@post) %>
        </div>
        <% if @post.user_id == current_user.id %>
            <div class="edit-delete-wrapper">
                <%= link_to "編集", edit_post_path(@post), class: "link-button" %>
                <%= button_to "削除", posts_path, method: :delete, class: "link-delete-button" %>
            </div>
        <% end %>
    </li>   
</ul>