<h1>編集</h1>

<%= form_with model: @post, html: {class: "form-container"} do |form| %>
    <div class="form-input">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div class="form-input">
        <%= form.label :kind %>
        <%= form.text_field :kind %>
    </div>
    <div class="form-input">
        <%= form.label :date_and_time %>
        <%= form.text_field :date_and_time %>
    </div>
    <div class="form-input">
        <%= form.label :place %>
        <%= form.text_field :place %>
    </div>
    <div class="form-input">
        <%= form.label :content %>
        <%= form.text_area :content %>
    </div>
    <div class="button-container">
        <%= form.submit "更新", class: "link-button" %>
    </div>
<% end %>
