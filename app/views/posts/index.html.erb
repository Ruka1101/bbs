<h1>Meow</h1>

<div class="button-container">
    <%= link_to "新しい投稿", new_post_path, class: "link-button" %>
</div>

<ul>
    <% @posts.each do |post| %>
        <li>
            <h2><%= post.title %></h2>
            <p><%= post.content %></p>
            <span>
                <small><%= post.created_at.strftime('%Y年%m月%d日 %H時%M分') %></small><br>
                <small><%= post.user.name %></small>
            </span>
            <div>
                <%= link_to "詳細", show_post_path(post) %>            
                <% if post.user_id == current_user.id %>                
                    <%= link_to "編集", edit_post_path(post) %>
                    <%= button_to "削除", post_path(post), method: :delete %>   
                <% end %>
            </div>
        </li>
    <% end %>
</ul>